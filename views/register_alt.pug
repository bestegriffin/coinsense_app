                            script(src='assets/plugins/jquery-ui/jquery-ui.min.js')
                            |         
                            script(src='assets/plugins/pace-master/pace.min.js')
                            |         
                            script(src='assets/plugins/jquery-blockui/jquery.blockui.js')
                            |         
                            script(src='assets/plugins/bootstrap/js/bootstrap.min.js')
                            |         
                            script(src='assets/plugins/jquery-slimscroll/jquery.slimscroll.min.js')
                            |         
                            script(src='assets/plugins/switchery/switchery.min.js')
                            |         
                            script(src='assets/plugins/uniform/jquery.uniform.min.js')
                            |         
                            script(src='assets/plugins/offcanvasmenueffects/js/classie.js')
                            |         
                            script(src='assets/plugins/waves/waves.min.js')
                            |         
                            script(src='assets/js/modern.min.js')
